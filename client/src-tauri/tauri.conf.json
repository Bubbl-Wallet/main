{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "bubbl",
  "version": "0.1.0",
  "identifier": "com.bubbl.dev",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "bubbl",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "python-runtime",
      "python_client",
      "python.exe",
      "python.pdb",
      "python3.dll",
      "python3.pdb",
      "python310.dll",
      "python310.pdb",
      "pythonw.exe",
      "pythonw.pdb",
      "vcruntime140.dll",
      "vcruntime140_1.dll",
      "vcruntime140_threads.dll"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["bubbl"]
      }
    }
  }
}
